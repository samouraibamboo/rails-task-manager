<h1>These are your tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li> <%= link_to task.title, task_path(task)%> <%= link_to "Destroy", task_path(task), method: :delete, data: { confirm: "Are you sure?"} %>
        <% if task.completed %>
        <i class="far fa-check-square"></i>
        <% else %>
        <i class="far fa-square"></i>
        <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path%>
